<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" />
    <title>My URLs</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main style="margin: 1em;">
      <h3>My URLs</h3>
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Short URL ID</th>
            <th scope="col">Long URL</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% if (Object.keys(urls).length === 0) { %>
            <tr>
              <td colspan="3" class="text-center">No URLs available. Create one!</td>
            </tr>
          <% } else { %>
            <% for (const id in urls) { %>
              <tr>
                <td><a href="/u/<%= id %>"><%= id %></a></td>
                <td><%= urls[id] %></td>
                <td>
                  <a href="/urls/<%= id %>" class="btn btn-primary">Edit</a>
                </td>
                <td>
                  <form method="POST" action="/urls/<%= id %>/delete">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% } %>
        </tbody>
      </table>
      <a href="/urls/new" class="btn btn-primary">Create New URL</a>
    </main>
  </body>
</html>
